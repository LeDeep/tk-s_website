<% provide :title, 'Edit Profile' %>

<%= form_for @profile do |f| %>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.label :favorite_family_memory %>
  <%= f.text_area :favorite_family_memory %>
  <%= f.submit nil, :class => 'btn btn-primary' %>
<% end %>

<p><%= link_to 'Cancel', profile_path, :class => 'btn' %></p>
