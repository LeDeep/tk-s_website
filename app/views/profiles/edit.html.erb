<% provide :title, 'Edit Profile' %>

<%= form_for @profile do |f| %>
  <%= render 'shared/profile_error_messages' %>

  <%= f.label :birthday %>
  <%= f.date_select :birthday, :order => [:month, :day, :year], :start_year => 1920 %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.label :favorite_family_memory %>
  <%= f.text_field :favorite_family_memory %>
  <%= f.submit nil, :class => 'btn btn-primary' %>
<% end %>

<p><%= link_to 'Cancel', profile_path, :class => 'btn' %></p>
